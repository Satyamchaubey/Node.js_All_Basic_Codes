<html>
    <head>
        <title>
            <%= locals.title %>
        </title>
        <link rel="stylesheet" href="/css/home.css">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />

    </head>
    <body>
        <h1 id="list-1">
            <i class="fas fa-address-book"></i> 
            Contact List</h1>
        <div>
            <ul>
                <% for(let i of contact_list) { %>
                    <li class="contact">
                        <div class="detailes">
                     <p><%= i.name %></p>
                    <p><%= i.phone%></p>
                </div>
                <div class="delete-button">
                    <a href="/delete-contact/?phone=<%= i.phone %>">
                        <i class="fas fa-window-close"></i>

                    </a>
                </div>
                    </li>
                    
                    <%}%>
                    <form action="/contact-list" method="POST">
                        <input type="text" name="name" placeholder="write your name" required>
                        <input type="number" name="phone" placeholder="Enter you phone number" required>
                        <button type="submit">Add to contact</button>
                    </form>
            </ul>
        </div>
        <script src="/js/home.js"></script>
    </body>
</html> 